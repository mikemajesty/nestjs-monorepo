{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "App: @app/main.api",
      "type": "node",
      "request": "launch",
      "localRoot": "${workspaceFolder}/../../",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start:main-api:dev"
      ],
      "console": "integratedTerminal",
      "smartStep": true,
      "sourceMaps": true,
      "remoteRoot": "${workspaceFolder}/src",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "args": ["--runInBand", "--config=${workspaceFolder}/jest.config.js"],
      "request": "launch",
      "console": "integratedTerminal",
      "name": "Test: @app/main.api",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test"],
      "port": 9229,
      "sourceMaps": true
    }  
  ]
 }