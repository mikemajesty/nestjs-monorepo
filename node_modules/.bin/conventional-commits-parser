#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../conventional-commits-parser/cli.mjs" "$@"
else
  exec node  "$basedir/../conventional-commits-parser/cli.mjs" "$@"
fi
